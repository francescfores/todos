<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addtaskdialog"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:clickable="true"
    android:paddingTop="20dp">

    <ImageView
        android:id="@+id/task_remove_icon1"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:paddingLeft="20dp"
        android:src="@drawable/low"
        />
    <TextView
        android:id="@+id/todolistitemtext"
        android:layout_height="42dp"
        android:layout_width="wrap_content"
        android:paddingLeft="50dp"
        android:text="Nom tasca"
        android:textSize="16sp"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:onClick="updateTask"
        android:clickable="true"
        ></TextView>

    <CheckBox android:id="@+id/task_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:visibility="gone"
        />

    <!--<ImageView
        android:id="@+id/task_remove_icon"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/trash50"
        android:layout_marginRight="6dp"
        android:visibility="gone"
        />-->

</RelativeLayout>
